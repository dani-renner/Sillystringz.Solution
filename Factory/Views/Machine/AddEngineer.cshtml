@{
  Layout = "_Layout";
}

@model Factory.Models.Machine
<h2>Add a machine</h2>
<h4>Add a machine to this engineer's repertoire: @Html.DisplayFor(model => model.Name)</h4>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  @Html.Label("Select Engineer")
  @Html.DropDownList("EngineerId")
  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to machine list", "Index")</p>