@{
  Layout = "_Layout";
}
@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machine</h1>

@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
}

<ul>
@foreach (var machine in Model)
{
  <li>@Html.ActionLink($"{machine.Name}", "Details", new {id = machine.MachineId}) : 
    @foreach(var engineer in machine.JoinEntities)
    { 
      if (engineer.Engineer.Name != null)
      {
        <text> @engineer.Engineer.Name |</text>   
      }
    }
    @if (machine.JoinEntities.Count == 0)
    {
      <text>No one knows how to deal with this one.</text>
    }
  </li>
}
</ul>
<p>@Html.ActionLink("Add new machine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>